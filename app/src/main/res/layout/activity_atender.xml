<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dehcors.teleconsultorapp.AtenderActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <TextView
            android:id="@+id/atendertipoconsulta"
            android:text="@string/atender_a"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <TextView
            android:id="@+id/atenderidconsulta"
            android:hint="nÂº 44787"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:minWidth="100dp" />
    </LinearLayout>

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
            android:text="@string/a_espec"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="150dp"
                android:layout_gravity="center"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <TextView
            android:id="@+id/atenderespecialidade"
            android:hint="@string/enf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:minWidth="100dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/atenderduvida"
        android:padding="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:minWidth="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <EditText
                android:id="@+id/atenderresposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/dColorTest"
                android:gravity="top"
                android:hint="@string/parecer"
                android:minHeight="150dp"
                android:padding="2dp"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.EditText" />

    <Button
        android:id="@+id/atendersalvar"
        android:text="@string/bt_enviar_a"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@android:style/Widget.Material.Button.Colored"/>



</LinearLayout>
</ScrollView>
</LinearLayout>
