<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dehcors.teleconsultorapp.RotaActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/userDash_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/imagem"
        android:layout_gravity="right"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rota_view1"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="false"
                android:clickable="true"
                android:cropToPadding="false"
                android:elevation="2dp"
                android:theme="@android:style/Theme.Material.Light.Panel"
                app:srcCompat="@drawable/imagem1" />

            <ImageView
                android:id="@+id/rota_view2"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:theme="@android:style/Theme.Material.Light.Panel"
                app:srcCompat="@drawable/imagem3" />

            <ImageView
                android:id="@+id/rota_view3"
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:theme="@android:style/Theme.Material.Light.Panel"
                app:srcCompat="@drawable/imagem4" />
        </LinearLayout>


    </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/rotaMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/rota_menu" />



</LinearLayout>
