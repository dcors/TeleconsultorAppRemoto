<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_custom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/newU_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pop_newU_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/newU_subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/pop_newU_sub"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:textSize="18sp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/new_agente"
            style="@android:style/Widget.Material.Button"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:elevation="2dp"
            android:layout_marginLeft="16dp"
            android:text="Agente de SaÃºde"
            android:textColor="@color/colorSecondaryDark"
            android:textColorLink="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/new_especial"
            style="@android:style/Widget.Material.Button"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:elevation="2dp"
            android:text="Especialista"
            android:backgroundTint="@color/white"
            android:textColor="@color/colorSecondaryDark"
            android:textColorLink="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>