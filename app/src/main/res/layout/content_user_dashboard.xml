<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dehcors.teleconsultorapp.UserDashboard"
    tools:showIn="@layout/app_bar_user_dashboard">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="24dp"
      >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/userDash_newDiagnostico"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:backgroundTint="@color/gelo"
                android:contentDescription="@string/diagn"
                app:srcCompat="@drawable/diagn4" />

            <TextView
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:text="@string/diagn"
                android:textAlignment="center"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/userDash_newConsul"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_column="10"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:backgroundTint="@color/gelo"
                android:contentDescription="@string/new_check"
                app:srcCompat="@drawable/consult1" />

            <TextView
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/new_check"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_column="10"
                android:layout_row="1"/>
        </GridLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/userDash_relatorios"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:backgroundTint="@color/gelo"
                android:contentDescription="@string/relatorio"
                app:srcCompat="@drawable/relatorio1" />

            <TextView
                android:id="@+id/dashboardtxtrelatorio"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/relatorio"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_column="0"
                android:layout_row="1"/>

            <ImageButton
                android:id="@+id/userDash_verArquivo"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_column="10"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:backgroundTint="@color/gelo"
                android:contentDescription="@string/verArq"
                app:srcCompat="@drawable/search_icon" />


            <TextView
                android:id="@+id/dashboardtxtverarquivo"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_column="10"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:text="@string/verArq"
                android:textAlignment="center"
                android:textSize="14sp" />


        </GridLayout>

    </LinearLayout>


</LinearLayout>
